@model MultiPlug.Base.Http.EdgeApp
<form action="" method="post" accept-charset="utf-8" enctype="application/x-www-form-urlencoded">
    <section class="row-fluid">
        <div class="row-fluid">
            <div class="box">
                <div class="span4">
                    <a href="@Raw(Model.Context.Paths.Home)"><img alt="Network Icon" src="@Raw(Model.Context.Paths.Assets)images/networks.png"></a>
                </div>
                <div class="span4">
                    <p style="font-size:22.75px; padding-top:10px; text-align:center;">Hypertext Transfer Protocol</p>
                </div>
                <div class="span4" style="text-align: right;">
                    <button type="submit" value="submit" style="height:54px; width:65px" class="item btn btn-green"><i class="icon-save icon-large"></i><p>Save</p></button>
                </div>
            </div>
        </div>

        <div class="row-fluid">
            <div class="span6">
                <h3 class="box-header"><i class="icon-signout"></i>Clients [ @Model.Extension.Model.HttpClients.Length ]</h3>
                <div class="box non-collapsible">
                    <table id="httpClientsTable" class="table table-striped">
                        <thead>
                            <tr>
                                <th class="span4">Verb</th>
                                <th class="span4">URL</th>
                                <th class="span4"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var HttpClient in @Model.Extension.Model.HttpClients)
                            {
                                <tr>
                                    <td class="span4"><a href="@Raw(Model.Context.Paths.Home)httpclient/?id=@HttpClient.Guid">@HttpClient.Verb</a></td>
                                    <td class="span4"><a href="@Raw(Model.Context.Paths.Home)httpclient/?id=@HttpClient.Guid">@HttpClient.Url</a></td>
                                    <td class="span4"><a class="btn btn-red btn-deletehttpclient" href="@Raw(Model.Context.Paths.Home)httpclient/delete/?id=@HttpClient.Guid"><i class="icon-trash"></i></a></td>
                                </tr>
                            }

                            <tr>
                                <td class="span4"></td>
                                <td class="span4"></td>
                                <td class="span4"><button type="button" class="btn btn-green" id="btn-httpclient"><i class="icon-plus"></i></button></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="span6">
                <h3 class="box-header"><i class="icon-signin"></i>Endpoints [ 0 ]</h3>
                <div class="box non-collapsible">
                    @*<table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>URL</th>
                                    <th><a class="btn btn-green" href="@Raw(Model.Context.Paths.Home)httpendpoint/"><i class="icon-time icon-plus"></i></a></th>
                                </tr>
                            </thead>
                            <tbody>

                            </tbody>
                        </table>*@
                </div>
            </div>
        </div>
    </section>
</form>

<script>
    $("#btn-httpclient").click(function () {
        $('#httpClientsTable tr:last').before(NewHttpClient());

        $(".btn-deletehttpclienttemp").click(function (event) {
            event.preventDefault();
            $(this).closest("tr").remove();
        });

    });

    $(".btn-deletehttpclient").click(function (event) {
        event.preventDefault();

        var theRow = $(this).closest("tr");

        $.post($(this).attr('href'), function (data) {

        })
        .done(function () {
            theRow.remove();
        });
    });

    function NewHttpClient() {
        return '<tr>\
                <td class="span4">\
                    <select name="Verb">\
                        <option value="Get">Get</option>\
                        <option value="Post">Post</option>\
                    </select>\
                </td>\
                <td class="span4"><input type="text" name="Url" value="" autocomplete="off"></td>\
                <td class="span4"><a class="btn btn-red btn-deletehttpclienttemp" href="#"><i class="icon-trash"></i></a></td>\
            </tr>'
    }
</script>
